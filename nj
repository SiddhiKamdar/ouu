public ResponseEntity<ExpenseResponseDTO> createExpense(
        @RequestBody ExpenseCreateRequestDTO request){

    ExpensesDetail expense =
            expenseService.createExpense(
                    request.getTravelId(),
                    request.getExpenseTypeId(),
                    request.getAmount(),
                    request.getComment(),
                    request.getProofUrl()
            );

    ExpenseResponseDTO response =
            expenseService.mapExpense(expense);

    return ResponseEntity.ok(response);
}


