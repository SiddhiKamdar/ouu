package com.example.backend.dto.response;

public class OrgHierarchyDTO {

    private String employeeName;
    private String supervisionName;
    private String employeePosition;
    private String supervisiorPosition;
    private String employeeProfilePicture;
    private String supervisiorProfilePicture;

    public OrgHierarchyDTO(
            String employeeName,
            String supervisionName,
            String employeePosition,
            String supervisiorPosition,
            String employeeProfilePicture,
            String supervisiorProfilePicture
    ) {
        this.employeeName = employeeName;
        this.supervisionName = supervisionName;
        this.employeePosition = employeePosition;
        this.supervisiorPosition = supervisiorPosition;
        this.employeeProfilePicture = employeeProfilePicture;
        this.supervisiorProfilePicture = supervisiorProfilePicture;
    }

    // getters
}

package com.example.backend.repository;

import com.example.backend.dto.response.OrgHierarchyDTO;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.Repository;
import org.springframework.data.repository.query.Param;

import java.util.List;

@org.springframework.stereotype.Repository
public interface OrgChartRepository extends Repository<Object, Long> {

    @Query(
            value = "EXEC pr_orgmod_get_hierarchy @emp_id = :empId",
            nativeQuery = true
    )
    List<Object[]> getHierarchy(@Param("empId") Integer empId);
}


package com.example.backend.controller;

import com.example.backend.dto.response.OrgHierarchyDTO;
import com.example.backend.service.OrgChartService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/org-chart")
@CrossOrigin(origins = "*")
public class OrgChartController {

    @Autowired
    private OrgChartService orgChartService;

    @GetMapping("/{employeeId}")
    public List<OrgHierarchyDTO> getHierarchy(
            @PathVariable Integer employeeId
    ) {
        return orgChartService.getHierarchy(employeeId);
    }
}


