events={slots.map(slot => ({
  id: slot.slotId,
  title: slot.status === "OPEN"
    ? "Open"
    : slot.leaderEmpId === currentUserId
      ? "Your Booking"
      : `Booked (${slot.teamSize})`,
  start: slot.slotDate + "T" + slot.startTime,
  end: slot.slotDate + "T" + slot.endTime,
  backgroundColor:
    slot.status === "OPEN"
      ? "#28a745"
      : slot.leaderEmpId === currentUserId
        ? "#0d6efd"
        : "#dc3545"
}))}
